import { motion, AnimatePresence } from 'framer-motion'
import { useEffect, useState } from 'react'
import { useNavigate } from 'react-router'
import { useGameStore } from '../store/gameStore'
import Crewmate from './Crewmate'

export default function EjectionScreen() {
  const { ejectedPlayer, wasImposter, gamePhase, setGamePhase } = useGameStore()
  const navigate = useNavigate()
  
  // Animation sequence state
  const [showParticles, setShowParticles] = useState(false)
  const [showSpaceship, setShowSpaceship] = useState(false)
  const [showText, setShowText] = useState(false)
  const [showRoleReveal, setShowRoleReveal] = useState(false)

  useEffect(() => {
    if (!ejectedPlayer) return

    // Enhanced animation sequence with better timing
    const sequences = [
      { delay: 200, action: () => setShowParticles(true) },
      { delay: 800, action: () => setShowSpaceship(true) },
      { delay: 1800, action: () => setShowText(true) },
      { delay: 2800, action: () => setShowRoleReveal(true) },
    ]

    const timeouts = sequences.map(seq => 
      setTimeout(seq.action, seq.delay)
    )

    // Auto-navigate after show
    const finalTimeout = setTimeout(() => {
      if (gamePhase === 'results') navigate('/results')
      else setGamePhase('playing')
    }, 6000)

    return () => {
      timeouts.forEach(clearTimeout)
      clearTimeout(finalTimeout)
    }
  }, [ejectedPlayer, gamePhase, navigate, setGamePhase])

  if (!ejectedPlayer) return null

  return (
    <motion.div
      initial={{ opacity: 0 }}
      animate={{ opacity: 1 }}
      exit={{ opacity: 0 }}
      className="fixed inset-0 bg-linear-to-b from-[#000014] via-[#06070f] to-[#000005] flex flex-col items-center justify-center z-100 overflow-hidden"
    >
      {/* Enhanced star field with twinkling */}
      <div className="absolute inset-0 overflow-hidden pointer-events-none">
        {Array.from({ length: 80 }).map((_, i) => (
          <motion.div 
            key={i} 
            className="absolute bg-white rounded-full"
            style={{ 
              left: `${Math.random() * 100}%`, 
              top: `${Math.random() * 100}%`,
              width: Math.random() > 0.8 ? '3px' : '1px',
              height: Math.random() > 0.8 ? '3px' : '1px',
            }}
            animate={{ 
              opacity: [0.2, 1, 0.2],
              scale: [0.8, 1.2, 0.8]
            }}
            transition={{ 
              duration: 2 + Math.random() * 3, 
              repeat: Infinity,
              delay: Math.random() * 3 
            }}
          />
        ))}
      </div>

      {/* Spaceship entrance */}
      <AnimatePresence>
        {showSpaceship && (
          <motion.div
            initial={{ x: -300, y: 100, scale: 0.5, rotate: -45 }}
            animate={{ 
              x: [-300, -50, 50, 300], 
              y: [100, 20, -20, -100],
              scale: [0.5, 1, 1.2, 0.3],
              rotate: [-45, 0, 15, 45]
            }}
            transition={{ 
              duration: 2.5,
              times: [0, 0.3, 0.7, 1],
              ease: "easeInOut"
            }}
            className="absolute top-1/3 text-6xl z-30 drop-shadow-lg"
          >
            üöÄ
          </motion.div>
        )}
      </AnimatePresence>

      {/* Main ejection scene */}
      <div className="relative flex flex-col items-center">
        {/* Player being ejected with enhanced animation */}
        <motion.div 
          className="relative mb-8"
          initial={{ scale: 1, y: 50, rotate: 0 }}
          animate={showSpaceship ? {
            scale: [1, 1.3, 0.8, 0.4, 0.1],
            y: [50, -20, -80, -200, -400],
            x: [0, -10, 15, -25, 30],
            rotate: [0, 45, -30, 180, 540]
          } : { scale: 1, y: 50, rotate: 0 }}
          transition={{ 
            duration: 3,
            times: [0, 0.2, 0.4, 0.7, 1],
            ease: "easeOut"
          }}
        >
          <Crewmate color={ejectedPlayer.color} size={120} dead={true} />
          
          {/* Airlock/explosion ring effects */}
          {showParticles && (
            <>
              <motion.div
                className="absolute inset-0 rounded-full border-4 border-red-400"
                initial={{ scale: 1, opacity: 0 }}
                animate={{ 
                  scale: [1, 3, 5],
                  opacity: [0, 1, 0],
                }}
                transition={{ 
                  duration: 1.5,
                  repeat: 2,
                }}
              />
              
              <motion.div
                className="absolute inset-0 rounded-full border-2 border-orange-400"
                initial={{ scale: 1, opacity: 0 }}
                animate={{ 
                  scale: [1, 4, 7],
                  opacity: [0, 0.8, 0],
                }}
                transition={{ 
                  duration: 2,
                  delay: 0.3,
                  repeat: 1,
                }}
              />
            </>
          )}
          
          {/* Enhanced particle explosion */}
          <AnimatePresence>
            {showParticles && [...Array(24)].map((_, i) => (
              <motion.div
                key={i}
                className="absolute w-3 h-3 rounded-full"
                style={{
                  backgroundColor: i % 4 === 0 ? '#ff4757' : 
                                 i % 4 === 1 ? '#ffa502' : 
                                 i % 4 === 2 ? '#ff6348' : '#ff3838',
                  left: '50%',
                  top: '50%',
                }}
                initial={{ 
                  scale: 0,
                  x: 0,
                  y: 0,
                  opacity: 1 
                }}
                animate={{
                  scale: [0, 1.5, 0],
                  x: [0, (Math.cos((i / 24) * 2 * Math.PI) * (80 + Math.random() * 40))],
                  y: [0, (Math.sin((i / 24) * 2 * Math.PI) * (80 + Math.random() * 40))],
                  opacity: [1, 1, 0],
                  rotate: [0, 360 * (Math.random() > 0.5 ? 1 : -1)]
                }}
                transition={{
                  duration: 2,
                  ease: "easeOut",
                  delay: Math.random() * 0.3
                }}
              />
            ))}
          </AnimatePresence>
        </motion.div>

        {/* Enhanced text with dramatic reveal */}
        <AnimatePresence>
          {showText && (
            <motion.div
              initial={{ opacity: 0, y: 80, scale: 0.8 }}
              animate={{ opacity: 1, y: 0, scale: 1 }}
              exit={{ opacity: 0 }}
              className="text-center space-y-6"
            >
              {/* Dramatic "EJECTED" title */}
              <motion.div
                initial={{ scale: 0, rotate: -180 }}
                animate={{ scale: 1, rotate: 0 }}
                transition={{ type: 'spring', damping: 15, stiffness: 200 }}
                className="space-y-2"
              >
                <motion.h1 
                  className="text-6xl font-black text-red-400 tracking-[0.3em] uppercase drop-shadow-[0_0_20px_#ef4444aa]"
                  animate={{ 
                    textShadow: [
                      "0 0 20px #ef4444aa",
                      "0 0 40px #ef4444dd, 0 0 60px #ef444488",
                      "0 0 20px #ef4444aa"
                    ]
                  }}
                  transition={{ duration: 2, repeat: Infinity }}
                >
                  üö® EJECTED üö®
                </motion.h1>
                
                <motion.div
                  className="h-1 bg-linear-to-r from-transparent via-red-400 to-transparent mx-auto"
                  style={{ width: '200px' }}
                  animate={{ opacity: [0.5, 1, 0.5] }}
                  transition={{ duration: 1.5, repeat: Infinity }}
                />
              </motion.div>

              <motion.h2 
                initial={{ opacity: 0, y: 20 }}
                animate={{ opacity: 1, y: 0 }}
                transition={{ delay: 0.5 }}
                className="text-3xl font-black tracking-wider uppercase text-white"
              >
                <span className="text-[#e8c030]">{ejectedPlayer.name}</span> was ejected into space
              </motion.h2>

              {/* Space debris floating animation */}
              <div className="relative h-8">
                {[...Array(6)].map((_, i) => (
                  <motion.div
                    key={i}
                    className="absolute w-2 h-2 bg-gray-400 rounded"
                    style={{
                      left: `${10 + Math.random() * 80}%`,
                      top: `${Math.random() * 100}%`,
                    }}
                    animate={{
                      y: [-20, -100],
                      x: [(Math.random() - 0.5) * 60],
                      rotate: [0, 360 * (Math.random() > 0.5 ? 1 : -1)],
                      opacity: [1, 0],
                    }}
                    transition={{
                      duration: 4,
                      delay: Math.random() * 2,
                      ease: "easeOut",
                      repeat: Infinity,
                      repeatDelay: 1
                    }}
                  />
                ))}
              </div>
            </motion.div>
          )}
        </AnimatePresence>

        {/* Role reveal with enhanced drama */}
        <AnimatePresence>
          {showRoleReveal && (
            <motion.div
              initial={{ opacity: 0, scale: 0.5, y: 50 }}
              animate={{ opacity: 1, scale: 1, y: 0 }}
              transition={{ 
                type: 'spring', 
                damping: 12, 
                stiffness: 150,
                delay: 0.2 
              }}
              className="mt-8 text-center"
            >
              <motion.div
                className={`px-8 py-4 rounded-2xl border-4 inline-block relative overflow-hidden
                  ${wasImposter 
                    ? 'bg-linear-to-br from-green-500/20 to-green-400/10 border-green-400 text-green-300' 
                    : 'bg-linear-to-br from-red-500/20 to-red-400/10 border-red-400 text-red-300'}`}
                whileHover={{ scale: 1.05 }}
              >
                <motion.div
                  className={`absolute inset-0 ${wasImposter ? 'bg-green-400/10' : 'bg-red-400/10'}`}
                  animate={{ opacity: [0.1, 0.3, 0.1] }}
                  transition={{ duration: 2, repeat: Infinity }}
                />
                
                <motion.p
                  className={`text-2xl font-black tracking-wide uppercase relative z-10
                    ${wasImposter ? 'text-green-300' : 'text-red-300'}`}
                  initial={{ letterSpacing: '0em' }}
                  animate={{ letterSpacing: '0.1em' }}
                  transition={{ duration: 0.8 }}
                >
                  {wasImposter ? '‚úÖ ' : '‚ùå '}
                  {wasImposter
                    ? `${ejectedPlayer.name} was The Impostor!`
                    : `${ejectedPlayer.name} was NOT The Impostor!`}
                </motion.p>
              </motion.div>
            </motion.div>
          )}
        </AnimatePresence>
      </div>

      {/* Bottom status message */}
      <AnimatePresence>
        {showRoleReveal && (
          <motion.div
            initial={{ opacity: 0, y: 30 }}
            animate={{ opacity: 1, y: 0 }}
            transition={{ delay: 1 }}
            className="absolute bottom-12 text-center space-y-2"
          >
            <p className="text-[#9090b0] text-lg font-bold">
              üì° Connection lost... floating in the void... üì°
            </p>
            
            <motion.div
              className="flex items-center justify-center gap-2"
              initial={{ opacity: 0 }}
              animate={{ opacity: 1 }}
              transition={{ delay: 1.5 }}
            >
              {[...Array(3)].map((_, i) => (
                <motion.div 
                  key={i} 
                  className="w-3 h-3 rounded-full bg-[#e8c030]"
                  animate={{ opacity: [0.3, 1, 0.3] }}
                  transition={{ duration: 1, repeat: Infinity, delay: i * 0.3 }} 
                />
              ))}
            </motion.div>
          </motion.div>
        )}
      </AnimatePresence>
    </motion.div>
  )
}
